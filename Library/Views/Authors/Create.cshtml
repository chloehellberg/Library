@{
  Layout = "_Layout";
}

@model Library.Models.Author
@Html.ActionLink(" All Authors", "Index", null, null, new { @class="btn btn-info fa fa-user" })
<h4>Add Author</h4>

@using (Html.BeginForm())
{
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Name)</td>
      <td>@Html.TextBoxFor(model => model.Name)</td>
    </tr> 
    
  </table>
  <button type="submit" class="btn btn-default fa" ><i class="fa-user-plus"> Add Author</i></button>
}