@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Author>;
@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Authors</h1>

@if (@Model.Count == 0)
{
  <h3>No authors have been added yet!</h3>
} 
<ul>
  @foreach (Author author in Model)
  {
    <li>@Html.ActionLink($"{author.Name}", "Details", new { id = author.AuthorId })</li>
  }
</ul>
