@{
  Layout = "_Layout";
}

@model Library.Models.Book
@Html.ActionLink(" All Books", "Index", null, null, new { @class="btn btn-info fa fa-user" })
<h4>Add Book</h4>

@using (Html.BeginForm())
{
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Title)</td>
      <td>@Html.TextBoxFor(model => model.Title)</td>
    </tr> 
    <tr>
      <td>@Html.LabelFor(model => model.Genre)</td>
      <td>@Html.TextBoxFor(model => model.Genre)</td>
    </tr> 
    <tr>
      <td>@Html.LabelFor(model => model.Copies)</td>
      <td>@Html.TextBoxFor(model => model.Copies)</td>
    </tr> 
  </table>
  <button type="submit" class="btn btn-default fa" ><i class="fa-user-plus"> Add Book</i></button>
}