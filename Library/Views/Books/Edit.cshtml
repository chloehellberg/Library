@{
  Layout = "_Layout";
}

@model Library.Models.Book
@Html.ActionLink(" All Books", "Index", null, null, new { @class="btn btn-info fa fa-user" })
<h2>Edit</h2>

<h4>Edit @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.BookId)
  <table>
    <tr>
      <td>@Html.LabelFor(model => model.Title)</td>
      <td>@Html.EditorFor(model => model.Title)</td>
    </tr>
    <tr>
      <td>@Html.Label("Select Author")</td>
      <td>@Html.DropDownList("AuthorId")</td>
    </tr>
  </table>
  <button type="submit" class="btn btn-info fa"><i class="fa-edit"> Save</i></button>
}
