@{
  Layout = "_Layout";
}
@using Library.Models;
@model List<Library.Models.Book>;

@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Books:</h1>

@if (@Model.Count == 0)
{
  <h3>No Books have been added yet!</h3>
} 
<ul>
  @foreach (Book book in Model) 
  {
    <li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li>
  }
</ul>